    "@typescript-eslint/parser": "^2.29.0",
    "adm-zip": "^0.4.14",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-formatter-pretty": "^3.0.1",
    "eslint-plugin-tsdoc": "^0.2.4",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.1",
    "ts-node": "^8.9.0",
    "typedoc": "^0.17.8",
    "typedoc-plantuml": "^1.4.1",
